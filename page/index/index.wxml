<view class="page">

<!-- map.wxml -->
<map id="map" 
	longitude="{{longitude}}" 
	latitude="{{latitude}}"
	scale="14" 
	controls="{{controls}}" 
	bindcontroltap="controltap" 
	markers="{{markers}}" 
	bindmarkertap="markertap" 
	polyline="{{polyline}}" 
	bindregionchange="regionchange" 
	show-location="true" 
	class="map-common"
	circles="{{circles}}"
	wx:if="{{hasMarkers}}"
	>
</map>

</view>

